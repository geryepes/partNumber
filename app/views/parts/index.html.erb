<div style="min-height: 400px;">
	<div style="min-height: 210px; position: absolute; top: 0px ;left: calc((100% - 900px)/2); height: 210px; width: 900px;border-bottom-style: solid;  background-color: red" align="center">
	<h1>Listing Parts</h1>
	
	<b style="padding-right: 600px">Filter By:</b>
	
		<div style="margin-right: 500px ;text-align: right" align="left">
		
			<%= search_form_for @q do |f| %>
			  <p style="margin:0px; margin-right: 20px">
			  <%= f.label :title_cont %>
			  <%= f.search_field :title_cont %>
			  </p>
			  <p style="margin:0px; margin-right: 20px">
			  <%= f.label :reference_cont %>
			  <%= f.search_field :reference_cont %>
			  </p>
			  <p style="margin:0px; margin-right: 20px">
			  <%= f.label :model_name_cont %>
			  <%= f.search_field :model_name_cont %>
			  </p>
			  <p style="margin:10px; margin-right: 20px">
			  <%= f.submit "search" %>
		  	  </p>
			<% end %>
		
		</div>
	
	</div>

	<div style="position: absolute; top: 213px; left: calc((100% - 900px)/2); padding: 0px ;height: calc(100% - 286px); width: 900px; background-color: grey; " align="center">
	
		<table>
		  <thead>
		    <tr>
		      <th>Leter</th>
		      <th>Nro</th>
		      <th>Title</th>
		      <th>Reference</th>
		      <th>Model</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @parts.each do |part| %>
		      <tr>
		        <td><%= part.leter %></td>
		        <td> | <%= part.nro.to_s.rjust(7, '0') %> | </td>
		        <td><%= part.title %></td>
		        <td> |  <%= part.reference %></td>
		        <td> | <%= part.model.name %></td>
				
				<td> | <%= link_to 'Revisions', part_revisions_path(part) %></td>
		        <!--<td><%= link_to 'Show', part %></td>-->
		        <td><%= link_to 'Edit', edit_part_path(part) %></td>
		        <!--<td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	
	</div>


	<div align="center" style="min-height: 70px; position: absolute ; left: calc((100% - 900px)/2) ; top: calc(100% - 73px) ; height: 70px; width: 900px; background-color: red; border-top-style: solid">
	
		<p style="margin:15px; font-size: 15px; font-weight: bold; font-family: Courier">
			<%= link_to 'New Part', new_part_path %>
		</p>
	
	</div>

</div>